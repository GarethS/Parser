// "So easy, even your Granny could do it." 
main () {
    count = 0;
    on = 1;
    x = 0;
    while (count < 12) {
        on = 1;
        led(&x, on);
        on = 0;
        sleep(&x, 500);
        led(&x, on);
        sleep(&x, 500);
        count = count + 1;
        if (count > 10) {
            moveRelative(&x, -1000);
            count = 0;
        } else {
            moveRelative(&x, 100);
        }
    }
}
