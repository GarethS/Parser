// "So easy, even your Granny could do it." 
main () {
    count = 0;
    on = 1;
    x = 0;
    limit = 4;
    moveDistance = 200;
    while (count < 142) {
        on = !on;
        led(&x, on);    // The first paramater, &x, is the return value and is pass-by-reference
        on = !on;
        sleep(&x, 200);
        led(&x, on);
        sleep(&x, 200);
        count = count + 1;
        if (count > limit) {
            moveBack = moveDistance * -limit;
            moveRelative(&x, moveBack);
            count = 0;
            sleep(&x, 4000);
        } else {
            moveRelative(&x, moveDistance);
        }
    }
}
